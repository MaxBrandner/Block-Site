{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "rules": {
    "no-var": 2,
    "no-console": 0,
    "require-jsdoc": 0,
    "arrow-parens": ["error", "as-needed"],
    "brace-style": [2, "stroustrup"],
    "comma-dangle": ["error", "never"],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "space-infix-ops": "error",
    "no-unused-vars": [1, { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "indent": ["error", 2, {
      "MemberExpression": 1
    }],
    "max-len": [2, {
      "code": 120,
      "tabWidth": 2,
      "ignoreUrls": true,
      "ignoreStrings": true
    }]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "chrome": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
